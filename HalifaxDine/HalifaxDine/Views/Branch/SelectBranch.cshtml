@model IEnumerable<HalifaxDine.Models.BranchModel>

@{
    ViewBag.Title = "SelectBranch";
}

<h2  style="color:black;">SelectBranch</h2>

<table class="table" style="color:black;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Branch_City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Branch_Province)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Branch_Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Branch_Province)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Branch_City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Branch_Description)
        </td>
        <td>
            @Html.ActionLink("Select", "SelectBranch", "Branch", item, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
