@model IEnumerable<HalifaxDine.Models.MenuIngredientModel>

<h2>Menu_Ingredient</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ing_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Menu_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ing_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Menu_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { item })
            </td>
        </tr>
    }

</table>