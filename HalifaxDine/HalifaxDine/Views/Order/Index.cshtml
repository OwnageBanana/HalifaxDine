
@{
                /**/

                ViewBag.Title = "Index";
}

<h2>Select customer order</h2>


@if (ViewBag.Error != null)
{
    <p>@ViewBag.Error</p>
}
@using (Html.BeginForm("Order", "Order"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <label for="Client_Id">Enter Client Id</label>
                @Html.Editor("Client_Id", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Get Client Order" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
