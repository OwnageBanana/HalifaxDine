@model HalifaxDine.Models.FeedbackModel

@{
    ViewBag.Title = "SubmitFeedback";
}

<h2>SubmitFeedback</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    if (null == ViewBag.Result && ViewBag.Result == false)
    {
        @Html.Display("There was an issue submiting the feedback", new { @class = "text-danger" })
    }
<div class="form-horizontal">
    <h4>Halifax Dine Feedback</h4>

    <div class="form-group">
        @Html.LabelFor(model => model.Feedback_Comment, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.TextAreaFor(model => model.Feedback_Comment, new { @class = "form-control", @maxlength = "1000", @style = "max-width:600px; width:600px; height:100px;" } )
            @Html.ValidationMessageFor(model => model.Feedback_Comment, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Feedback_Rating, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.Feedback_Rating, new { htmlAttributes = new { @type = "number", @min = "0", max = "10", @step = "1", @value = "0" } })
            @Html.ValidationMessageFor(model => model.Feedback_Rating, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
